<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#90000000"

    android:layout_gravity="center">


    <LinearLayout
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:background="@mipmap/ic_backg"
        android:gravity="center">

        <ImageView
            android:id="@+id/loadingIndicator"
            android:layout_width="50dp"
            android:layout_height="50dp"


            android:layout_gravity="center"
            android:src="@drawable/wheel" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="140dp"
        android:layout_centerInParent="true"
        android:layout_height="140dp"
        android:paddingTop="18dp"
        android:paddingLeft="23dp"
        android:background="@mipmap/ic_backg"

        android:id="@+id/relativeLayout2">


        <ImageView
            android:id="@+id/gear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@drawable/gear1"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/gear3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="2dp"
            android:layout_gravity="center"
            android:src="@drawable/gear3"
            android:layout_toEndOf="@+id/gear1" />

        <ImageView
            android:id="@+id/gear2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_marginLeft="28dp"

            android:layout_gravity="center"
            android:src="@drawable/gear2"
            android:layout_below="@+id/gear1"
           />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Compressing..."
            android:layout_marginTop="5dp"
            android:layout_below="@+id/gear2"
            android:textColor="#000000"
            android:paddingRight="23dp"

            />
    </RelativeLayout>


</RelativeLayout>
