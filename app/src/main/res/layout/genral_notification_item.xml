<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="vertical"
    card_view:cardCornerRadius="0dp"
    android:id="@+id/mainCardView"
    card_view:cardUseCompatPadding="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/notifyImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toEndOf="@+id/chkSelected"
            android:layout_toRightOf="@+id/chkSelected"
            android:scaleType="fitXY"
             />

        <TextView
            android:id="@+id/notifyTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="left"
            android:paddingTop="10dp"
            android:text="Laura Gibson"
            android:textColor="@color/colorPrimary_black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/notifyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/notifyTime"
            android:layout_toRightOf="@+id/notifyImage"
            android:gravity="left"
            android:paddingTop="10dp"
            android:text="Laura Gibson"
            android:textColor="@color/colorPrimary_black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/notifyDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/notifyName"
            android:layout_alignStart="@+id/notifyName"
            android:layout_below="@+id/notifyName"

            android:gravity="left"
            android:paddingBottom="10dp"
            android:paddingTop="5dp"
            android:text="Laura Gibson"
            android:textColor="@color/grey_colorRipple"
            android:textSize="15sp" />



        <ImageView
            android:id="@+id/iv_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notifyTime"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/iv_line"
            android:padding="10dp"

            android:src="@drawable/accept" />

        <ImageView
            android:id="@+id/iv_line"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_cancel"
            android:layout_below="@+id/notifyTime"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/iv_cancel"
            android:src="@drawable/line1" />

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/notifyTime"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:src="@drawable/cancel1" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
