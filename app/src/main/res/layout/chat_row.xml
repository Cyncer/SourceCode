<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp" >

        <LinearLayout
            android:id="@+id/rlOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/ProfileOther"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:visibility="gone"
                android:layout_gravity="bottom"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cync_icon" />

            <LinearLayout
                android:id="@+id/llOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
              
                android:orientation="vertical"
                android:padding="5dp"
                 >

                <TextView
                    android:id="@+id/message_text_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="25dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="center"
                    android:layout_gravity="left"
                    android:background="@drawable/msg_in"
                    android:textColor="#000000"
                    android:textSize="14sp" />
                
                <TextView
                    android:id="@+id/chattime_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:paddingLeft="8dp"
                    android:textSize="10dp"

                    />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlMine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/ProfileMine"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="bottom"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:src="@drawable/cync_icon" />

            <LinearLayout
                android:id="@+id/llMine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                 android:padding="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/message_text_Mine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="25dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="center"
                    android:layout_gravity="right"
                    android:background="@drawable/chat_box2"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
                
                   <TextView
                    android:id="@+id/chattime_mine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingLeft="8dp"
                    android:textSize="10dp"

                    
                    />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>